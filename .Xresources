! color definitions and basic color settings
#include ".base16-xresources/base16-ashes.Xresources"


URxvt.letterSpace: 0
URxvt.font: xft:RobotoMono Nerd Font:size=10
URxvt.boldFont: xft:RobotoMono Nerd Font:size=10:Bold
URxvt.italicFont: xft:RobotoMono Nerd Font:size=10:Italic
URxvt.boldItalicFont: xft:RobotoMono Nerd Font:size=10:Bold:Italic
! scrollbar width
URxvt*thickness: 10
URxvt*scrollColor: #C4C4C4
URxvt*scrollBar_right: true
URxvt*scrollstyle: plain
URxvt*scrollBar_floating: true

! -------------------------------------------------------------------
! ROFI configuration
! -------------------------------------------------------------------
! Contains both custom settings and defaults I might want to modify
! in the future
rofi.font: RobotoMono Nerd Font 10

rofi.color-enabled: true
rofi.color-window: #1c2023, #c7ccd1, #393f45
rofi.color-normal: #1c2023, #adb3ba, #1c2023, #ae95c7, #1c2023
rofi.color-active: #1c2023, #747c84, #1c2023, #747c84, #1c2023
rofi.color-urgent: #1c2023, #c7ae95, #1c2023, #c7ae95, #1c2023

! Enabled modi
rofi.modi:                           window,run,ssh
! Window opacity
rofi.opacity:                        100
! Window width
rofi.width:                          50
! Number of lines
rofi.lines:                          15

! Cycle through the results list
rofi.cycle:                          false

rofi.padding:                        5
! Margin between rows
rofi.line-margin:                    1
! Border width
rofi.bw:                             1
! Separator style (none, dash, solid)
rofi.separator-style:                solid
! Scrollbar width
rofi.scrollbar-width:                10

! Run command to execute
rofi.run-command:                    {cmd}
! Command to get extra run targets
rofi.run-list-command:
! Run command to execute that runs in shell
rofi.run-shell-command:              {terminal} -e {cmd}
! Command executed on accep-entry-custom for window modus
rofi.window-command:                 xkill -id {window}
